{
  "name": "react-native-tcomponent",
  "version": "0.1.0",
  "description": "Tcomponent",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-tcomponent.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/aldoetobex/react-native-tcomponent",
  "author": "Aldo Rifki Putra <aldoetobex@gmail.com> (https://github.com/aldoetobex)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aldoetobex/react-native-tcomponent/issues"
  },
  "homepage": "https://github.com/aldoetobex/react-native-tcomponent#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/jest": "^26.0.23",
    "@types/react": "^16.14.8",
    "@types/react-native": "0.62.13",
    "commitlint": "^11.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "pod-install": "^0.1.23",
    "prettier": "^2.3.1",
    "react": "^16.13.1",
    "react-native": "^0.63.4",
    "react-native-builder-bob": "^0.18.1",
    "release-it": "^14.10.0",
    "typescript": "^4.3.4"
  },
  "peerDependencies": {
    "@react-native-community/datetimepicker": "*",
    "react": "*",
    "react-native": "*",
    "react-native-color-picker": "*",
    "react-native-datepicker": "*",
    "react-redux": "*",
    "redux": "*",
    "tcomponent": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module"
    ]
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "*",
    "react-native-color-picker": "*",
    "react-native-datepicker": "*",
    "react-native-modal-datetime-picker": "^10.0.0",
    "react-native-tags-input": "^1.0.10"
  }
}
